<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 날짜 표시 -->
    <TextView
        android:id="@+id/date_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8월 17일"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="24dp" />

    <!-- 일기 EditText -->
    <EditText
        android:id="@+id/diary_input_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="#EDE6F6"
        android:gravity="top|start"
        android:hint="일기 내용을 입력하세요..."
        android:padding="16dp"
        android:textSize="16sp"
        android:inputType="textMultiLine"
        android:minLines="10"
        app:layout_constraintTop_toBottomOf="@id/date_text_tv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/analyze_button"
        android:layout_margin="24dp"/>

    <!-- 저장 및 분석 버튼 -->
    <Button
        android:id="@+id/analyze_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="일기 저장 및 분석하기"
        android:textSize="18sp"
        android:backgroundTint="#EDE6F6"
        android:layout_margin="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
