<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#FFF9F0"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/app_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="📓 AI Diary"
        android:textColor="#333333"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/write_diary_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="오늘의 일기 쓰기"
        android:textSize="18sp"
        android:backgroundTint="#FFB347"
        android:textColor="#FFFFFF"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="8dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/app_name_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/past_diary_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="지난 일기 보기"
        android:textSize="18sp"
        android:backgroundTint="#FFA07A"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/write_diary_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/emotion_history_btn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="감정 히스토리 보기"
        android:textSize="18sp"
        android:backgroundTint="#87CEFA"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="24dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/past_diary_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안녕하세요!\n오늘 하루를 기록해 보세요 ☀️"
        android:textColor="#555555"
        android:textSize="20sp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
